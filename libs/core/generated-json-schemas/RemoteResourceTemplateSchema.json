{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "RemoteResourceTemplateSchema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "stateSubscription": {
      "type": "object",
      "properties": {
        "watchedScopes": {
          "type": "object",
          "properties": {
            "global": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "local": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "variables": {
          "type": "object",
          "propertyNames": {
            "type": "string"
          },
          "additionalProperties": {}
        }
      },
      "additionalProperties": false
    },
    "options": {
      "type": "object",
      "properties": {
        "runCondition": {
          "type": "boolean"
        },
        "requests": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "fetcherId": {
                "type": "string"
              },
              "configs": {},
              "interpolation": {
                "type": "string",
                "pattern": "^(<\\${)([\\s\\S]*?)(}\\$>)$"
              }
            },
            "required": [
              "fetcherId",
              "configs"
            ],
            "additionalProperties": false
          }
        },
        "onSuccess": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "payload": {}
            },
            "required": [
              "type"
            ],
            "additionalProperties": false
          }
        },
        "parallel": {
          "type": "boolean"
        }
      },
      "required": [
        "requests"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "id",
    "options"
  ],
  "additionalProperties": false
}